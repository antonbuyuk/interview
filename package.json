{
  "name": "frontend-interview-app",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "node server/index.js",
    "dev:client": "vite",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && echo 'Build completed. Push to main branch to deploy via GitHub Actions.'",
    "start": "node server/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "migrate:data": "node scripts/migrate-to-db.js",
    "postinstall": "prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@tiptap/extension-code-block": "^3.15.1",
    "@tiptap/starter-kit": "^3.15.1",
    "@tiptap/vue-3": "^3.15.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "highlight.js": "^11.10.0",
    "marked": "^11.2.0",
    "openai": "^4.28.0",
    "turndown": "^7.2.2",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.23.0",
    "prettier": "^3.2.5",
    "prisma": "^5.19.1",
    "sass": "^1.97.2",
    "vite": "^7.3.0"
  }
}
